<!DOCTYPE html>
<html lang="utf-8">

<head>
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
   
    <link rel="stylesheet" href="~/css/mr_hot_mainpage.css">
    <link rel="icon" href="~/img/icon/icon_soup.png">

</head>
<body>
    <div class="container-fluid">
        <div class="row mx-auto" style="width:83%;">
            <div id="logo" class="mx-auto">
                <a href="/Home/Index">
                    <img class="img-fluid" src="~/img/logo.jpg" width="130">
                </a>
            </div>
            <div class="mx-auto d-flex align-items-center">
                <a href="#" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#Reservation">&nbsp;&nbsp;線上訂位</a>
            </div>
        </div>
        <div class="row mx-auto">
            <nav class="navbar navbar-expand-lg navbar-light bg-warning mx-auto">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarToggler">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item ">
                            <a class="nav-link" href="~/Home/Introduction">湯老爺是誰？</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="~/Home/Products">有哪些好吃的？</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="~/Home/Where">去哪找他？</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="https://www.facebook.com/MrHot.455/">聯絡湯老爺</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Login">登入/註冊</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="row container body-content mx-auto " style="width:82%;">
            @RenderBody()
        </div>
    </div>

    <!--線上訂位單-->
    <div class="modal fade" id="Reservation" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>

                <form action="/Home/Reservation" method="POST">
                    <div class="modal-title">
                        <h3 class="text-center">線上訂位</h3>
                        <p class="text-center">※定位保留10分鐘。</p>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group">
                                <label>稱呼：</label>
                                <input type="text" name="customerName" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label>日期：</label>
                                <input type="datetime-local" name="reserveDate" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-6">
                                <label>聯絡電話</label>
                                <input type="text" name="contactPhone" class="form-control">
                            </div>
                            <div class="form-group col-6">
                                <label>人數</label>
                                <input type="text" name="peopleCnt" class="form-control">
                            </div>
                        </div>
                        <div>
                            <div class="form-group mx-auto" style="width:91%;">
                                <label>備註:</label>
                                <textarea class="form-control rounded-0" name="remark"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">確認</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--/線上訂位單-->
</body>
</html>